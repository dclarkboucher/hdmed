Package: hdmed
Title: Methods for Mediation Analysis with High-Dimensional Mediators
Version: 1.0
Authors@R:
    c(person(given = "Dylan",
           family = "Clark-Boucher",
           role = c("aut", "cre"),
           email = "dclarkboucher@fas.harvard.edu"),
